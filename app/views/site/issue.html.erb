    if(window.location.hash){
        var hash = window.location.hash
        komentar_id = hash.split("#k")[1]
        $(".komentar"+komentar_id).css("background-color","green");
        setTimeout(function(){$(".komentar"+komentar_id).css("background-color","");}, 500);
    }
